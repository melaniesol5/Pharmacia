{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid-container">
        <h1>Patient</h1>

        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ patient.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ patient.name }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ patient.lastName }}</td>
                </tr>
                <tr>
                    <th>Age</th>
                    <td>{{ patient.age }}</td>
                </tr>
                <tr>
                    <th>Idnumber</th>
                    <td>{{ patient.idNumber }}</td>
                </tr>
                <tr>
                    <th>Idtype</th>
                    <td>{{ patient.idType }}</td>
                </tr>
                <tr>
                    <th>Analisis</th>
                    <td>{% if patient.analisis %}{{ patient.analisis|join(', ') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Observations</th>
                    <td>{{ patient.observations }}</td>
                </tr>
            </tbody>
        </table>

        
            <div class="button-group">
                <a href="{{ path('patient_index') }}" class="button">Back to the list</a>
            
        
                <a href="{{ path('patient_edit', { 'id': patient.id }) }}" class="warning button">Edit</a>
            
            
                <button>{{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="alert button">
                {{ form_end(delete_form) }}</button>
            
        </div>
    </div>
{% endblock %}
